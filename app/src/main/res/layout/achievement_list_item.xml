<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/list_item_bg"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_large"
        >

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_achivement"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight=".7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgAchievePic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_bear" />

            </LinearLayout>


            <LinearLayout
                android:layout_weight=".3"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_weight=".2"
                    android:adjustViewBounds="true"
                    android:src="@drawable/text_bear"
                    android:id="@+id/imgAchieveTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_weight=".2"
                    android:adjustViewBounds="true"
                    android:src="@drawable/text_bear_1"
                    android:id="@+id/imgAchieveText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:layout_weight=".6"
                    android:weightSum="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_small">

                    <LinearLayout
                        android:layout_weight=".5"
                        android:weightSum=".9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">

                        <ImageView
                            android:layout_weight=".3"
                            android:id="@+id/imgAStar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:layout_weight=".3"
                            android:id="@+id/imgAStar2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/star_icon_empty" />

                        <ImageView
                            android:layout_weight=".3"
                            android:id="@+id/imgAStar3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/star_icon_empty" />

                    </LinearLayout>

                    <ImageView
                        android:layout_weight=".5"
                        android:id="@+id/btnAchieveGetGift"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_reward5" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ach_list_footer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/list_item_bottom_bg" />

</LinearLayout>