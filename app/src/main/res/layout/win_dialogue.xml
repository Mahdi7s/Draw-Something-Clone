<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".WinDialogue"
    android:gravity="center"
    android:layoutDirection="ltr">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="@dimen/margin_medium">

                <ImageView
                    android:id="@+id/winCoins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dialoge_coins3"
                    android:layout_weight="2.7"
                    android:layout_marginLeft="@dimen/margin_medium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.3"
                    android:layout_marginRight="@dimen/margin_medium">

                    <com.chocolate.puzhle2.CustomViews.CTextView
                        android:id="@+id/title_win"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="بردی رفیق !"
                        android:textSize="@dimen/text_large"
                        android:textColor="@android:color/black"
                        android:gravity="center"/>

                    <com.chocolate.puzhle2.CustomViews.CTextView
                        android:id="@+id/text_win"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/letter_size_dw_height"
                        android:layout_gravity="center"
                        android:text="jj"
                        android:textSize="@dimen/text_win"
                        android:textColor="#5d5d5d"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:id="@+id/items_seperator_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/store_seperator" />

            <com.chocolate.puzhle2.CustomViews.CTextView
                android:id="@+id/text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="پازلی که حل کردی چقدر سخت بود؟"
                android:textSize="@dimen/text_win"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="2"
                android:layout_gravity="center"
                android:scaleY="0.6"
                android:scaleX="0.6"
                />

            <RelativeLayout
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_bar_height"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_submit_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/header_bar_height"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_submit_rating"
                   />

                <com.chocolate.puzhle2.CustomViews.CTextView
                    android:id="@+id/text_difficulty"
                    android:text="راحت بود"
                    android:gravity="center"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>